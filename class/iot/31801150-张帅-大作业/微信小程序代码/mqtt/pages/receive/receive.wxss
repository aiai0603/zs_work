/* pages/receive/receive.wxss */

.container{
  display: flex;
  flex-flow: column;
  justify-content: center;
  align-items: center;
  font-size: 50rpx;
  
  
}

.menu{
 padding: 0 40rpx;
font-weight: 600;
font-size: 40rpx;
  font-size:30rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #fff;
 }

 .chartsitem{
   width: 50%;
   height: 100%;
 }


 .borders{
  border-bottom: 4rpx solid #0081ff;
  color: #0081ff;
 }

.container>view{
margin: 20rpx;
color: white;
  
  
}


page{
  background-color: #f0f0f0
}

.menu_box{
  display: flex;
  height: 80rpx;
  background-color: #fff;
  overflow-y: scroll;
 }

 .title{
   width: 96%;
   margin:2%;
   background-color: #fff;
   display: flex;
   flex-flow: row;
   justify-content: flex-start;
   align-items: center;
   padding:30rpx 0;
   border-radius: 30rpx;
   box-shadow: #eeeeee 0px 0px 5px 5px;
  
 }

.none-warning{
    padding:40rpx 0;
}

.has-warning{
  width: 100%;
  display: flex;
  flex-flow: column;
  justify-content: center;
  align-items: center;
}

.deal-button{
  font-size: 28rpx;
  padding:10rpx 20rpx;
  border: 1rpx red solid;
}

.has-warning-item{
  display: flex;
  flex-flow: row;
  width: 100%;
  justify-content:space-around;
  align-items: center;
  padding:40rpx 0 0 0;
  font-size: 36rpx;
  font-weight: 600;
  color: red;
}

 .warning{
  width: 96%;
  margin:2%;
  background-color: #fff;
  display: flex;
  flex-flow: column;
  justify-content: center;
  align-items: center;
  padding:30rpx 0;
  border-radius: 30rpx;
  box-shadow: #eeeeee 0px 0px 5px 5px;
 
}



 .title-number{
    width: 50%;
    font-weight: 800;
    padding-left: 40rpx;
  
 }

 .title-sign{
   width: 40rpx;
   height:40rpx;
   border-radius: 40rpx;
   margin-right: 20rpx;
   border: 1rpx #ccc solid;
 }

 .sign-word{
   font-weight:600;
 }


 .box {

width: 100%;
height: 70%;
 display: flex;
 flex-flow: row;
 justify-content: center;
 align-items: center;


} 

.tah{
  height:600rpx;
  width: 96%;
  margin:2%;
  background-color: #fff;
 display: flex;
 flex-flow: column;
 justify-content: center;
 align-items: center;
  padding:30rpx 0;
  border-radius: 30rpx;
  box-shadow: #eeeeee 0px 0px 5px 5px;
}

.warning-title{
  display: flex;
  flex-flow: row;
  width: 90%;
  justify-content: space-around;
  align-items:center;
}

